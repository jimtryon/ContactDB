extends layout

block content
    h1= "Edit Contact"
    div.newcontact
        form( method="post")
            input(name="_id", type="hidden", value=contacts._id.toHexString()) 
            div
                div
                    span.label Title :
                    input(type="text", name="title", id="editContactTitle", value=contacts.title)
                div
                    span.label Name :
                    input(type="text", name="name", id="editContactName", value=contacts.name)
                div
                    span.label Company :
                    input(type="text", name="company", id="editContactCompany", value=contacts.company)
                div
                    span.label Email :
                    input(type="text", name="email", id="editContactEmail", value=contacts.email)
                div
                    span.label Where Met :
                    input(type="text", name="wheremet", id="editContactWhere", value=contacts.wheremet)
                div
                    span.label Date Met :
                    input(type="text", name="datemet", id="editContactDate", value=contacts.datemet)
                div
                    span.label Comments :
                    textarea(name="comments", id="editContactComments" rows="5" )
                div#editContactSubmit
                    input(type="submit", value="Update")
        a(href="/")!= "Back to Contact List"