extends layout

block content
    h1= title
    #contacts
        - each employee in employees
          div.employee
            div.created_at= employee.created_at
            div.title= employee.title 
            div.name= employee.name
            div.company= employee.company 
            div.email= employee.email
            div.wheremet= employee.wheremet 
            div.datemet= employee.datemet
            div.comments= employee.comments
                form( method="post", action="/contact/:id/delete") 
                    input(name="_id", type="hidden", value=employee._id.toHexString()) 
                    input(id="delete", value="X", type="submit")
                form( method="get", action="/contact/:id/edit") 
                    input(name="_id", type="hidden", value=employee._id.toHexString()) 
                    input(id="edit", value="Edit", type="submit")
             br
        a(href="/contact/new")!= "Add New Contact"